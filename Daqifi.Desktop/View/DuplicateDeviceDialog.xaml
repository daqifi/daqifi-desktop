<controls:MetroWindow x:Class="Daqifi.Desktop.View.DuplicateDeviceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Device Already Connected" ResizeMode="NoResize" Width="480" Height="280" GlowBrush="{DynamicResource AccentColorBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Icon -->
        <iconPacks:PackIconMaterial Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" 
                                   Margin="5" Kind="AlertCircleOutline" 
                                   HorizontalAlignment="Center" VerticalAlignment="Top"
                                   Height="50" Width="50" Foreground="Orange"/>

        <!-- Message -->
        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Message}" 
                  VerticalAlignment="Top" Margin="10,5,0,10" 
                  TextWrapping="Wrap" FontSize="14"/>

        <!-- Options -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
            <RadioButton x:Name="KeepExistingRadio" Content="{Binding KeepExistingText}" 
                        IsChecked="True" Margin="5" FontSize="12"/>
            <RadioButton x:Name="SwitchToNewRadio" Content="{Binding SwitchToNewText}" 
                        Margin="5" FontSize="12"/>
            <RadioButton x:Name="CancelRadio" Content="Cancel (don't connect)" 
                        Margin="5" FontSize="12"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                   Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Click="BtnOk_Click" Width="80" Height="30" Margin="0,0,10,0"
                   Style="{StaticResource MahApps.Styles.Button.Square.Accent}" 
                   controls:ControlsHelper.ContentCharacterCasing="Normal"/>
            <Button Content="Cancel" Click="BtnCancel_Click" Width="80" Height="30"
                   Style="{StaticResource MahApps.Styles.Button.Square}" 
                   controls:ControlsHelper.ContentCharacterCasing="Normal"/>
        </StackPanel>
    </Grid>
</controls:MetroWindow>